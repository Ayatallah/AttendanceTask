@model IEnumerable<AttendanceApp.Models.UserData>

@{
    ViewData["Title"] = "Index";
}

@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

<h2>Index</h2>

<p>
    @if (@HttpContextAccessor.HttpContext.Session.GetString("isAdmin").Equals("True") || @HttpContextAccessor.HttpContext.Session.GetString("isDepartmentAdmin").Equals("True"))
    {
        <a asp-action="ViewSearch">Search</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.weeklyHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item != null)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.weeklyHours)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.UserId })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div>
    <a asp-action="Logout">Log Out</a>
</div>
